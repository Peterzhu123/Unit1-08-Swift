// This program about find max and min values 

import Foundation
var array = [Int]()
for i in 1 ... 10 {
    let random : UInt32 = arc4random_uniform(100)
    array.append(Int(random) )
}
var minValue = array[0];
var maxValue = array[0];

for min in 0...array.count-1 {
    if array[min] < minValue {
        minValue = array[min]
    }
}

for max in 0...array.count-1{
    if array[max] > maxValue {
        maxValue = array[max]
    }
}
print("The array is =\(array)")
print("The max value is =\(maxValue)")
print("The min value is =\(minValue)")
